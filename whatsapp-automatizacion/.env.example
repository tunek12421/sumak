# URL del Backend Go
# En producción, cambiar por la URL real del servidor
BACKEND_URL=http://localhost:8080/api

# Números de WhatsApp de los departamentos (DEPRECADO - ahora se envía al backend)
# Formato: código_país + número (sin + ni espacios)
# Ejemplo Bolivia: 591 + 70123456 = 59170123456

NUMERO_CAJAS=591XXXXXXXX
NUMERO_PLATAFORMA=591XXXXXXXX
NUMERO_REGISTRO=591XXXXXXXX
NUMERO_BIENESTAR=591XXXXXXXX
NUMERO_BIBLIOTECA=591XXXXXXXX

# Puerto para el panel de administración (opcional)
ADMIN_PORT=3000

# Configuración de horarios (opcional)
HORARIO_INICIO=8
